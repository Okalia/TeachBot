# config
config =
  googleMaps:
    page: '#body_users_show',
    trigger: 'googleMaps',
    source: "https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_API_KEY'] %>&signed_in=true&libraries=places",
    loaded: false
  facebook:
    page: '#body_sessions_new',
    trigger: 'initFacebook',
    source: '//connect.facebook.net/en_US/sdk.js',
    loaded: false

# helpers
loader = (status, source, trigger = null) ->
  if (!status)
    loadExternalScript(source, trigger)
  else
    if trigger
      $(document).trigger trigger

loadExternalScript = (source, trigger = null) ->
  $.getScript(source).done ->
    if trigger
      $(document).trigger trigger


# handler
$(document).on 'turbolinks:load', ->
  for key, value of config
    if $(value.page).length
      loader(value.loaded, value.source, value.trigger)
      value.loaded = true