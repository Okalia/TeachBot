<% if flash[:success_notice] %>
    <%= react_component('RightBottomNotice', {message: flash[:success_notice], type: 'success'}) %>
<% end %>

<% if flash[:info_notice] %>
    <%= react_component('RightBottomNotice', {message: flash[:info_notice], type: 'info'}) %>
<% end %>

<% if flash[:info_danger] %>
    <%= react_component('RightBottomNotice', {message: flash[:info_danger], type: 'danger'}) %>
<% end %>