<%= render 'users/nav' %>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active load-fade" id="profile" role="tabpanel">
    <div class="container-fluid" style="margin-top: 15px">
      <div class="row">
        <div class="col-md-12">
          <h1 style="text-align: center;">Courses</h1>
          <hr>
          <%= react_component('UserCourses', {
              user: @user.id,
              current_user: current_user.try(:id),
              is_teacher: current_user ? current_user.role?(:teacher) : nil
          }) %>
        </div>
      </div>
    </div>
  </div>
</div>

