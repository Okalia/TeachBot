<div class="container">
  <div class="row justify-content-center" style="margin-top: 15px;">
    <h1>Sign in</h1>
  </div>
  <div class="row justify-content-center load-fade">
    <div class="col-md-6 align-self-center">

      <%= react_component('ResponseMessagesBlock') %>
      <%= form_for(:session, url: login_path, remote: true, html: {id: 'login_form'}) do |f| %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Type your email', required: 'true' %>
          <small>Your email need to restore password</small>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: 'true' %>
          <small>Your password</small>
        </div>

        <div class="form-check">
          <%= f.label :remember_me, class: 'form-check-label' do %>
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <span>Remember me on this computer</span>
          <% end %>
        </div>

        <%= f.submit 'Sign in', class: 'btn btn-outline-primary pull-xs-right', id: 'login_btn',
                    data: {disable_with: 'Loading...'}%> or

        <%= link_to auth_facebook_path, class: 'btn fb-btn', role: 'button', id: 'facebook_oauth_btn' do %>
          <i class="fa fa-facebook-official" aria-hidden="true"></i> Login with Facebook
        <% end %>

        <%= link_to auth_github_path, class: 'btn gh-btn', role: 'button', id: 'github_oauth_btn' do %>
          <i class="fa fa-github" aria-hidden="true"></i> Login with GitHub
        <% end %>
      <% end %>
      <hr>
      <%= link_to "Didn't receive confirmation email ?", new_account_activation_path %>
    </div>
  </div>
</div>