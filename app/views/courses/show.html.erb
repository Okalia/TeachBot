<div class="container" style="margin-top: 15px">

  <div class="box-shadow-block" style="padding: 0 15px 15px 15px">
    <div class="course-top-line"></div>
    <div class="row">
      <div class="col-sm">
        <h1 class="display-4"><%= @course.title %></h1>
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="col-sm">
        <blockquote class="blockquote">
          <%= @course.description %>
        </blockquote>
      </div>
    </div>
    <div class="row">
      <div class="col-sm">
        <p>Author: <%= link_to @course.author.username, user_path(@course.author) %>
          <%= image_tag @course.author.avatar, class: 'rounded-circle', height: '30px', width: '30px' %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm">
        <p>Last update: <%= @course.updated_at %></p>
      </div>
    </div>
  </div>

  <h2 style="text-align: center; margin: 15px">Related lessons</h2>

  <div class="box-shadow-block" style="margin-top: 15px;">
    <% if @course.lessons.any? %>
      <%= render partial: 'lesson', collection: @course.lessons, cached: true %>
    <% else %>
      <h2 style="text-align: center; padding: 30px">Lessons not found</h2>
      <%= link_to 'Create a new lesson', new_course_lesson_path(@course) if it_is_current_user(@course.author) %>

    <% end %>

  </div>
</div>

