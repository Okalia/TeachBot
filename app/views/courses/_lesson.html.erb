<div class="card lesson_block" id="lesson_<%= lesson.id %>">
  <div class="card-block">
    <h3 class="card-title"><%= lesson.title %></h3>
    <p class="card-text"><%= lesson.description %></p>
    <p>
      <small><%= lesson.created_at %></small>
    </p>
    <%= link_to 'Visit', course_lesson_path(@course, lesson), class: 'btn btn-outline-primary' %>

    <% if it_is_current_user(@course.author) %>
      <%= link_to 'Edit', edit_course_lesson_path(@course, lesson), class: 'btn btn-outline-warning' %>
      <%= button_to 'Destroy', course_lesson_path(@course, lesson), method: :delete,
                    remote: true, data: { confirm: 'Are you sure?', disable_with: 'Deleting...' },
                    class: 'btn btn-outline-danger', form_class: 'd-inline' %>
    <% end %>
  </div>
</div>