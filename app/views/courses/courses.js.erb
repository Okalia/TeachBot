$("#courses_paginate_list").append("<%= escape_javascript(render(partial: 'user_controllers/courses/course', collection: @courses)) %>");

// Update pagination link
<% if @courses.last_page? %>
$('#pagination_link').html('');
<% else %>
$('#pagination_link')
    .html("<%=j link_to_next_page(@courses, 'More courses', remote: true, class: 'btn btn-block btn-outline-primary',
                                    params: {controller: '/api', action: 'user_courses_pagination',
                                    :user_id => @user.id}) %>");
<% end %>