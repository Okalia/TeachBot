<!-- Button trigger modal -->
<button type="button" class="list-group-item list-group-item-action"
        data-toggle="modal" data-target="#edit_poster_modal" style="border-radius: 0">
  <i class="fa fa-picture-o" aria-hidden="true"></i>&ensp;Edit poster
</button>


<!-- modal upload -->
<div class="modal fade" id="edit_poster_modal"
     tabindex="-1" role="dialog" aria-labelledby="edit_poster_modal_Label" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <%= form_for(@course, url: poster_course_path(@course.id),
                 remote: true, authenticity_token: true, html: { id: 'edit_course_poster' }) do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="edit_poster_modal_Label">Edit poster</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= react_component('ResponseMessagesBlock') %>
          <div class="form-group">
            <%= f.label :poster %>

            <div>
              <img id="course_preview_poster" src="" class="course-poster-preview" style="display: none">
            </div>
            <hr>

            <%= file_field :course, :poster, class: 'form-control-file' %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit 'Upload poster', class: 'btn btn-primary', id: 'upload_poster_btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>