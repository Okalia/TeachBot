<%= react_component('ResponseMessagesBlock') %>
<%= form_for(@course, remote: true) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'Type the title of the course', required: 'true',
                     maxlength: 50 %>
    <small>Title of your course</small>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', placeholder: 'Type the description of the course', required: 'true',
                    maxlength: 255 %>
    <small>Description of your course</small>
  </div>

  <div class="form-group">
    <div class="form-check">
      <label class="form-check-label">
        <%= f.check_box :public, { class: 'form-check-input' } %>
        Public course
      </label>
    </div>
    <small>
      Remove the check flag if you want to create a private course
      (Only you and course's participants can view a content of the course)
    </small>
  </div>

  <div class="form-group">
    <%= f.label :theme %>
    <%= f.color_field :theme, class: 'form-control' %>
    <small>
      Theme of your course defines color decor of your course
    </small>
  </div>

  <div class="form-group">
    <%= f.label :tags %>
    <%= f.text_field :tags, value: f.object.tags.pluck(:name).join(','), maxlength: 75 %>
    <small>Associate your course with keywords</small>
  </div>
  <%= f.submit class: 'btn btn-outline-primary pull-xs-right',
               id: 'create_user_btn',
               data: { disable_with: 'Loading...' }
  %>
<% end %>
