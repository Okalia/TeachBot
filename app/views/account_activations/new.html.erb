<div class="container">
  <div class="row justify-content-center" style="margin-top: 15px;">
    <h1>Send activation email</h1>
  </div>
  <div class="row justify-content-center load-fade">
    <div class="col-md-6 align-self-center">

      <%= react_component('ResponseMessagesBlock') %>

      <%= form_tag(account_activations_path, remote: true) do %>

        <div class="form-group">
          <%= label(:user, :email) %>
          <%= email_field :user, :email, class: 'form-control', placeholder: 'Type your email', required: 'true' %>
          <small>We will send activation link on this email</small>
        </div>

        <%= submit_tag 'Send activation email', class: 'btn btn-outline-primary pull-xs-right', id: 'login_btn' %>
      <% end %>
    </div>
  </div>
</div>