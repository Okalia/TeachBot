<%= content_for :head do %>
  <meta id="course_theme_color" content="<%= @course.theme %>">
<% end %>

<%= render partial: 'nav', locals: {lesson: @lesson, course: @course} %>

<div class="container-fluid">
  <h1><%= @lesson.title %></h1>
  <p class="lead">
    <%= @lesson.description %>
  </p>
  <hr>
  <%= sanitize @lesson.content %>
</div>
